<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIAppHomework2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIAppHomework2"
    Shell.FlyoutBehavior="Flyout"
    Title="MAUIAppHomework2">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Manage Data"
        ContentTemplate="{DataTemplate local:ManageDataPage}"
        Route="ManageDataPage" />

    <ShellContent
        Title="View Data"
        ContentTemplate="{DataTemplate local:ViewDataPage}"
        Route="ViewDataPage" />

    <ShellContent
        Title="Add Customer Page"
        ContentTemplate="{DataTemplate local:AddCustomerPage}"
        Route="AddCustomerPage" />

    <ShellContent
        Title="Add Order Page"
        ContentTemplate="{DataTemplate local:AddOrderPage}"
        Route="AddOrderPage" />

    <ShellContent
        Title="Add Product Page"
        ContentTemplate="{DataTemplate local:AddProductPage}"
        Route="AddProductPage" />


</Shell>
