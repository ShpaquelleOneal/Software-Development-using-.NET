@{
    ViewData["Title"] = "Home Page";
}
<h1>Order Management Console.</h1>
<div class="mt-3" style="margin: 100px">
    <form method="get" action="@Url.Action("CreateTestData", "Home")">
        <button type="submit" class="list-group-item list-group-item-action active">Generate Test Data</button>
    </form>
    <a class="list-group-item list-group-item-action" asp-controller="Customer" asp-action="List">View Customer Data</a>
    <a class="list-group-item list-group-item-action" asp-controller="Product" asp-action="List">View Product Data</a>
    <a class="list-group-item list-group-item-action" asp-controller="Order" asp-action="List">View Orders Data</a>
</div>
