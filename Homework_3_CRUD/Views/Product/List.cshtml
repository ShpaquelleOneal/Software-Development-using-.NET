@*List of all Products*@

@model List<Homework_3_CRUD.Models.Entities.Product>

<h1>All Products</h1>
<a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action">Go Back</a>
<a class="list-group-item list-group-item-action active" asp-controller="Product" asp-action="Add">Add new Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ID">Edit</a>
                </td>
            </tr>
        }
    </tbody>

</table>