@{
}

@* Reference a Customer model *@
@model Homework_3_CRUD.Models.Entities.Customer;

@* Page for Customer data editing *@
<h1>Edit Customer</h1>

@if (Model is null)
{
    <p>No Customer found.</p>
}
else {
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Surname</label>
        <input type="text" class="form-control" asp-for="Surname" />
    </div>

    <div class="mt-3">
        <label class="form-label">EMail</label>
        <input type="text" class="form-control" asp-for="EMail" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger"
                asp-action="Delete"
                asp-controller="Customer">Delete</button>
        <a href="@Url.Action("List", "Customer")" class="btn btn-secondary">Go Back</a>
    </div>
</form>
}

