
@* Reference an Order Details model *@
@model Homework_3_CRUD.Models.EditOrderDetailViewModel;

@* Page for Order Detail data editing *@


@if (Model is null)
{
    <h1>Edit Order Detail</h1>
    <p>No Order Detail found.</p>
    <a href="@Url.Action("List", "Order")" class="btn btn-secondary">Go Back</a>
}
else
{
    <h1>Edit Order Detail for Product - @Model.product.Name</h1>
    <form method="post">
        <div class="mt-3" hidden>
            <label class="form-label">Product</label>
            <input type="text" class="form-control" asp-for="orderDetail.ID" readonly/>
        </div>

        <div class="mt-3">
            <label class="form-label">Amount</label>
            <input type="number" min="0" class="form-control" asp-for="orderDetail.Amount" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger"
                    asp-action="DeleteOrderDetails"
                    asp-controller="Order">
                Delete
            </button>
            @Html.ActionLink("Go Back", "ViewOrderDetails", "Order", new { id = Model.orderDetail.OrdersID }, new { @class = "btn btn-primary" })
        </div>

        <div class="mt-3">
        </div>
    </form>
}

