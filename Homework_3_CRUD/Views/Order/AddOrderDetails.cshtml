@model Homework_3_CRUD.Models.AddOrderDetailsViewModel

<!-- Add Order Detail -->
<form method="post">
    <input type="hidden" asp-for="orderID" value="@Model.orderID" readonly/>

    <div class="mt-3">
        <label for="productDropdown">Select Product:</label>
        <select id="productDropdown" class="form-control" asp-for="OrderDetails.ProductID">
            @foreach (var product in Model.Products)
            {
                <option value="@product.ID">@product.Name @product.Price</option>
            }
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Amount</label>
        <input type="number" class="form-control" asp-for="OrderDetails.Amount" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("List", "Order")" class="btn btn-secondary">Go Back</a>
    </div>


</form>