@model Homework_3_CRUD.Models.AddOrderViewModel

<h1>Add Order</h1>

<form method="post">
    <div class="mt-3">
        <label for="customerDropdown">Select Customer:</label>
        <select id="customerDropdown" class="form-control" name="customerID">
            @foreach (var customer in Model.Customers)
            {
                <option value="@customer.ID">@customer.Name @customer.Surname @customer.EMail</option>
            }
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Next</button>
        <a href="@Url.Action("List", "Order")" class="btn btn-secondary">Go Back</a>
    </div>
</form>